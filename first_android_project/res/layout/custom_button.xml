<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#f0ff01"
                android:endColor="#797a06"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#c4c2c2" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#fcd830"
                android:startColor="#ff6e02"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#c4c2c2" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#dff4ff"
                android:startColor="#03a7fd"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#c4c2c2" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>