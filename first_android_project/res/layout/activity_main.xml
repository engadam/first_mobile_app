<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_custom"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:weightSum="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            android:paddingTop="10dp" >

            <ScrollView
                android:id="@+id/ScrollView01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <com.example.first_android_project.ui.customview.PerfectScrollableTextView
                    android:id="@+id/num_disp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/display_custom"
                    android:gravity="right"
                    android:text="0"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="40sp" />
            </ScrollView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" >

                <Button
                    android:id="@+id/button"
                    style="@style/defaultButtonStyle"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:background="@drawable/process_btn_style"
                    android:text="MC" />

                <Button
                    android:id="@+id/button2"
                    style="@style/defaultButtonStyle"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:background="@drawable/process_btn_style"
                    android:text="MR" />

                <Button
                    android:id="@+id/button3"
                    style="@style/defaultButtonStyle"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:background="@drawable/process_btn_style"
                    android:text="MS" />

                <Button
                    android:id="@+id/button4"
                    style="@style/defaultButtonStyle"
                    android:layout_column="3"
                    android:layout_row="0"
                    android:background="@drawable/process_btn_style"
                    android:text="M+" />

                <Button
                    android:id="@+id/button5"
                    style="@style/defaultButtonStyle"
                    android:layout_column="4"
                    android:layout_row="0"
                    android:background="@drawable/process_btn_style"
                    android:text="M-" />

                <Button
                    android:id="@+id/btn_back"
                    style="@style/defaultButtonStyle"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:background="@drawable/custom_num_button"
                    android:text="Bk" />

                <Button
                    android:id="@+id/button7"
                    style="@style/defaultButtonStyle"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:background="@drawable/custom_num_button"
                    android:text="CE" />

                <Button
                    android:id="@+id/button8"
                    style="@style/defaultButtonStyle"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:background="@drawable/custom_num_button"
                    android:text="C" />

                <Button
                    android:id="@+id/btn_pn"
                    style="@style/defaultButtonStyle"
                    android:layout_column="3"
                    android:layout_row="1"
                    android:background="@drawable/custom_num_button"
                    android:text="+-" />

                <Button
                    android:id="@+id/btn_sqr"
                    style="@style/defaultButtonStyle"
                    android:layout_column="4"
                    android:layout_row="1"
                    android:background="@drawable/process_btn_style"
                    android:text="Sq" />

                <Button
                    android:id="@+id/btn_7"
                    style="@style/defaultButtonStyle"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:background="@drawable/custom_num_button"
                    android:text="7" />

                <Button
                    android:id="@+id/btn_8"
                    style="@style/defaultButtonStyle"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:background="@drawable/custom_num_button"
                    android:text="8" />

                <Button
                    android:id="@+id/btn_9"
                    style="@style/defaultButtonStyle"
                    android:layout_alignBottom="@+id/linearLayout"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_column="2"
                    android:layout_row="2"
                    android:background="@drawable/custom_num_button"
                    android:text="9" />

                <Button
                    android:id="@+id/btn_div"
                    style="@style/defaultButtonStyle"
                    android:layout_column="3"
                    android:layout_row="2"
                    android:background="@drawable/custom_num_button"
                    android:text="/" />

                <Button
                    android:id="@+id/button15"
                    style="@style/defaultButtonStyle"
                    android:layout_column="4"
                    android:layout_row="2"
                    android:background="@drawable/process_btn_style"
                    android:text="%" />

                <Button
                    android:id="@+id/btn_4"
                    style="@style/defaultButtonStyle"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:background="@drawable/custom_num_button"
                    android:text="4" />

                <Button
                    android:id="@+id/btn_5"
                    style="@style/defaultButtonStyle"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:background="@drawable/custom_num_button"
                    android:text="5" />

                <Button
                    android:id="@+id/btn_6"
                    style="@style/defaultButtonStyle"
                    android:layout_column="2"
                    android:layout_row="3"
                    android:background="@drawable/custom_num_button"
                    android:text="6" />

                <Button
                    android:id="@+id/btn_multi"
                    style="@style/defaultButtonStyle"
                    android:layout_column="3"
                    android:layout_row="3"
                    android:background="@drawable/custom_num_button"
                    android:text="*" />

                <Button
                    android:id="@+id/button20"
                    style="@style/defaultButtonStyle"
                    android:layout_column="4"
                    android:layout_row="3"
                    android:background="@drawable/process_btn_style"
                    android:text="1/x" />

                <Button
                    android:id="@+id/btn_1"
                    style="@style/defaultButtonStyle"
                    android:layout_column="0"
                    android:layout_row="4"
                    android:background="@drawable/custom_num_button"
                    android:text="1" />

                <Button
                    android:id="@+id/btn_2"
                    style="@style/defaultButtonStyle"
                    android:layout_column="1"
                    android:layout_row="4"
                    android:background="@drawable/custom_num_button"
                    android:text="2" />

                <Button
                    android:id="@+id/btn_3"
                    style="@style/defaultButtonStyle"
                    android:layout_column="2"
                    android:layout_row="4"
                    android:background="@drawable/custom_num_button"
                    android:text="3" />

                <Button
                    android:id="@+id/btn_sub"
                    style="@style/defaultButtonStyle"
                    android:layout_column="3"
                    android:layout_row="4"
                    android:background="@drawable/custom_num_button"
                    android:text="-" />

                <Button
                    android:id="@+id/btn_eql"
                    style="@style/defaultButtonStyle"
                    android:layout_column="4"
                    android:layout_row="4"
                    android:background="@drawable/process_btn_style"
                    android:text="=" />

                <Button
                    android:id="@+id/btn_0"
                    style="@style/defaultButtonStyle"
                    android:layout_column="0"
                    android:layout_row="5"
                    android:background="@drawable/custom_num_button"
                    android:text="0" />

                <Button
                    android:id="@+id/btn_00"
                    style="@style/defaultButtonStyle"
                    android:layout_column="1"
                    android:layout_row="5"
                    android:background="@drawable/custom_num_button"
                    android:text="00" />

                <Button
                    android:id="@+id/btn_000"
                    style="@style/defaultButtonStyle"
                    android:layout_column="2"
                    android:layout_row="5"
                    android:background="@drawable/custom_num_button"
                    android:text="000" />

                <Button
                    android:id="@+id/btn_dot"
                    style="@style/defaultButtonStyle"
                    android:layout_column="3"
                    android:layout_row="5"
                    android:background="@drawable/custom_num_button"
                    android:text="." />

                <Button
                    android:id="@+id/btn_plus"
                    style="@style/defaultButtonStyle"
                    android:layout_column="4"
                    android:layout_row="5"
                    android:background="@drawable/process_btn_style"
                    android:text="+" />
            </GridLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>