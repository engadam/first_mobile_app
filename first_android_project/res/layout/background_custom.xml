<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>        
        <shape>
            <gradient 
                android:endColor="#0b0b0b"
                android:startColor="#3d3d3d"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#c4c2c2" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>

