
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    android:background="@drawable/background_custom"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            android:paddingTop="10dp"
            android:weightSum="1" >

            <TextView
                android:id="@+id/num_disp"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="10pt"
                android:layout_marginLeft="5pt"
                android:layout_marginRight="10pt"
                android:layout_marginTop="2pt"
                android:layout_weight="0.88"
                android:background="@drawable/display_custom"
              	android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="0"
                android:textAlignment="textStart"
                android:textIsSelectable="false"
                android:textSize="20pt"
                android:gravity="right"
                android:padding="10dp"
                android:focusable="true"
        		android:focusableInTouchMode="true"
        		android:ellipsize="none"
               android:scrollbars="none"
               android:textAppearance="?android:attr/textAppearanceLarge"></TextView>"

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="429dp" >

            <GridLayout
                android:layout_width="260dp"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="15dp">

                <Button
                    android:id="@+id/button"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:background="@drawable/process_btn_style"
                    android:text="MC" />
"

                <Button
                    android:id="@+id/button2"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:background="@drawable/process_btn_style"
                    android:text="MR" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:background="@drawable/process_btn_style"
                    android:text="MS" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_column="3"
                    android:layout_row="0"
                    android:background="@drawable/process_btn_style"
                    android:text="M+" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_column="4"
                    android:layout_row="0"
                    android:background="@drawable/process_btn_style"
                    android:text="M-" />

                <Button
                    android:id="@+id/btn_back"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:background="@drawable/custom_num_button"
                    android:text="Back"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:background="@drawable/custom_num_button"
                    android:text="CE" 
					android:textSize="12dp" />
                <Button
                    android:id="@+id/button8"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:background="@drawable/custom_num_button"
                    android:text="C" 
					android:textSize="12dp" />
                <Button
                    android:id="@+id/btn_pn"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_column="3"
                    android:layout_row="1"
                    android:background="@drawable/custom_num_button"
                    android:text="+-" 
					android:textSize="12dp" />
                <Button
                    android:id="@+id/btn_sqr"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_column="4"
                    android:layout_row="1"
                    android:background="@drawable/process_btn_style"
                    android:text="Sq" 
					android:textSize="12dp" />
                <Button
                    android:id="@+id/btn_7"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:background="@drawable/custom_num_button"
                    android:text="7" />

                <Button
                    android:id="@+id/btn_8"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:background="@drawable/custom_num_button"
                    android:text="8" />

                <Button
                    android:id="@+id/btn_9"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_alignBottom="@+id/linearLayout"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_column="2"
                    android:layout_row="2"
                    android:background="@drawable/custom_num_button"
                    android:text="9" />

                <Button
                    android:id="@+id/btn_div"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_column="3"
                    android:layout_row="2"
                    android:background="@drawable/custom_num_button"
                    android:text="/" />

                <Button
                    android:id="@+id/button15"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_column="4"
                    android:layout_row="2"
                    android:background="@drawable/process_btn_style"
                    android:text="%" />

                <Button
                    android:id="@+id/btn_4"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:background="@drawable/custom_num_button"
                    android:text="4" />

                <Button
                    android:id="@+id/btn_5"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:background="@drawable/custom_num_button"
                    android:text="5" />

                <Button
                    android:id="@+id/btn_6"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_column="2"
                    android:layout_row="3"
                    android:background="@drawable/custom_num_button"
                    android:text="6" />

                <Button
                    android:id="@+id/btn_multi"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_column="3"
                    android:layout_row="3"
                    android:background="@drawable/custom_num_button"
                    android:text="*" />

                <Button
                    android:id="@+id/btn_overx"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_column="4"
                    android:layout_row="3"
                    android:background="@drawable/process_btn_style"
                    android:text="1/x" />

                <Button
                    android:id="@+id/btn_1"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_column="0"
                    android:layout_row="4"
                    android:background="@drawable/custom_num_button"
                    android:text="1" />

                <Button
                    android:id="@+id/btn_2"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_column="1"
                    android:layout_row="4"
                    android:background="@drawable/custom_num_button"
                    android:text="2" />

                <Button
                    android:id="@+id/btn_3"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_column="2"
                    android:layout_row="4"
                    android:background="@drawable/custom_num_button"
                    android:text="3" />

                <Button
                    android:id="@+id/btn_sub"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_column="3"
                    android:layout_row="4"
                    android:background="@drawable/custom_num_button"
                    android:text="-" />

                <Button
                    android:id="@+id/btn_eql"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_column="4"
                    android:layout_row="4"
                    android:background="@drawable/process_btn_style"
                    android:text="=" />

                <Button
                    android:id="@+id/btn_0"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_column="0"
                    android:layout_row="5"
                    android:background="@drawable/custom_num_button"
                    android:text="0" />

                <Button
                    android:id="@+id/btn_00"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_column="1"
                    android:layout_row="5"
                    android:background="@drawable/custom_num_button"
                    android:text="00" />

                <ImageButton
                    android:id="@+id/btn_camel"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="left"
                    android:background="@drawable/custom_num_button"
                    android:src="@drawable/camal" />

                <Button
                    android:id="@+id/btn_dot"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_column="3"
                    android:layout_row="5"
                    android:background="@drawable/custom_num_button"
                    android:text="." />

                <Button
                    android:id="@+id/btn_plus"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_column="4"
                    android:layout_row="5"
                    android:background="@drawable/process_btn_style"
                    android:text="+" />

            </GridLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
    