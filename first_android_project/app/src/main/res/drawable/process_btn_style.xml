<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#f8981c"
                android:endColor="#f8981c"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#c4c2c2" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#f8981c"
                android:startColor="#f8981c"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#c4c2c2" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient 
                android:endColor="#f7f7f7"
                android:startColor="#f7f7f7"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#c4c2c2" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>

